<div class="row">
	<div class="col s12 m8">
		<h4>
			Equipment
			{{#if session.isAuthenticated}}
			<small>
				{{#link-to 'equipment.new' class="btn-floating waves-effect waves-light green"}}
					<i class="mdi-content-add"></i>
				{{/link-to}}
			</small>
			{{/if}}
		</h4>
	</div>
	<div class="col s12 m4">
		{{materialize-input value=searchQuery label="Search by equipment name" icon="mdi-action-search"}}
	</div>
</div>

<ul class="collection">
	{{#each filteredList as |equipment|}}
		{{#link-to 'equipment.view' equipment.id class="collection-item"}}
			<span class="badge green lighten-4">{{equipment.type}}</span>
			{{equipment.name}}
		{{/link-to}}
	{{/each}}
</ul>