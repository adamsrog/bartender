<div class="row">
	<div class="col s12">
		<h3>{{model.name}}</h3>
		{{#if model.description}}
			<p class="flow-text">{{model.description}}</p>
		{{/if}}
		<hr>
	</div>
</div>
<div class="row">
	<div class="col m6 s12">
		<h5>Ingredients</h5>
		<ul class="collection">
		{{#each model.combined as |ingredient|}}
			<li class="collection-item">
				<span class="badge blue lighten-4">
					{{ingredient.amount}} {{ingredient.measurement}}
				</span>
				{{ingredient.name}}
			</li>
		{{/each}}
		</ul>
	</div>
	<div class="col m6 s12">
		<h5>Steps</h5>
		<ol class="collection">
		{{#each model.steps as |step|}}
			<li class="collection-item">{{step}}</li>
		{{/each}}
		</ol>
	</div>
</div>
<div class="row">
	<div class="col m6 s12">
		{{liquid-content data=model.combined height=350 width=350 radius=175}}
	</div>
	<div class="col m6 s12">
		<img class="responsive-img" src={{model.equipment.image}}>
	</div>
</div>
	