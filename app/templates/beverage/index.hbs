<div class="row">
	<div class="col s12 m8">
		<h3>Beverages <small>{{#link-to 'beverage.new' class="btn-floating waves-effect waves-light green"}}<i class="mdi-content-add"></i>{{/link-to}}</small></h3>
	</div>
	<div class="col s12 m4">
		{{materialize-input value=searchQuery label="Search by beverage name" icon="mdi-action-search"}}
	</div>
</div>

<ul class="collection">
	{{#each beverage in filteredList}}
		{{#link-to 'beverage.view' beverage.id class="collection-item"}}
			{{beverage.name}}
		{{/link-to}}
	{{/each}}
</ul>