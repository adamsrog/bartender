<div class="row">
	<div class="col s12 m8">
		<h4>
			Ingredients
			<small>
				{{#link-to 'ingredient.new' class="btn-floating waves-effect waves-light green"}}
					<i class="mdi-content-add"></i>
				{{/link-to}}
			</small>
		</h4>
	</div>
	<div class="col s12 m4">
		{{materialize-input value=searchQuery label="Search by ingredient name" icon="mdi-action-search"}}
	</div>
</div>

<ul class="collection">
	{{#each ingredient in filteredList}}
		{{#link-to 'ingredient.view' ingredient.id class="collection-item"}}
			<span class="badge green lighten-4">{{ingredient.type}}</span>
			{{ingredient.name}}
		{{/link-to}}
	{{/each}}
</ul>